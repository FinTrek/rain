<div class='intro'>
	<div class='intro__details'>
		<p class='intro__byline'>By
			<a href='{{meta.author.url}}' target='_blank'>
				<strong>{{meta.author.name}}</strong>
			</a>
		</p>
		<time class='intro__time'>February 2020</time>
	</div>
	<h1 class='intro__hed'>{{{doc.title}}}</h1>
	<div class='intro__user'>
		<p class='intro__user-prompt'>{{{doc.userPrompt}}}</p>
	</div>

	<div class='prose'>
		{{#each doc.intro}}
		<p>{{{value}}}</p>
		{{/each}}
	</div>

</div>